generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  HRD
  KARYAWAN
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  role      Role      @default(KARYAWAN)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Departemen {
  id             Int        @id @default(autoincrement())
  slugDepartemen String     @unique
  namaDepartemen String     @unique
  Karyawan       Karyawan[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Vendor {
  id         Int        @id @default(autoincrement())
  slugVendor String     @unique
  namaVendor String     @unique
  alamat     String
  noTelp     String     @unique
  Karyawan   Karyawan[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model AlasanLembur {
  id          Int      @id @default(autoincrement())
  description String   @db.VarChar(200)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Karyawan {
  id                   Int         @id @default(autoincrement())
  nik                  String      @unique
  NamaLengkap          String
  alamat               String
  noTelp               String      @unique
  tanggalMasukKaryawan DateTime
  GajiPokok            GajiPokok[]
  vendor               Vendor?     @relation(fields: [vendorId], references: [id])
  vendorId             Int?
  departemen           Departemen? @relation(fields: [departemenId], references: [id])
  departemenId         Int?
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
}

model JamKerja {
  id        Int      @id @default(autoincrement())
  kodeShift String   @unique
  jamMasuk  DateTime @db.Time()
  jamPulang DateTime @db.Time()
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GajiPokok {
  id         Int       @id @default(autoincrement())
  jumlahGaji Decimal
  karyawan   Karyawan? @relation(fields: [karyawanId], references: [id])
  karyawanId Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
